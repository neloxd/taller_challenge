<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/gray_200" android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray_50" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:color="@color/black_sigo"  android:state_activated="true">
        <shape>
            <solid android:color="#20000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:color="@color/black_sigo" android:state_enabled="true">
        <shape>
            <solid android:color="#20000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#30000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:color="@color/black_sigo">
        <shape>
            <solid android:color="#20000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>

